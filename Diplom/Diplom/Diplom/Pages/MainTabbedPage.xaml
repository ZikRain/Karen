<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Pages.MainTabbedPage"
            xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" xmlns:local="clr-namespace:Diplom.Pages"
            ios:Page.UseSafeArea="True" 
             BackgroundColor="#3874cc">
  <!--Pages can be added as references or inline-->
    <NavigationPage  IconImageSource="list.png">
        <x:Arguments>
            <local:Catalog/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage  IconImageSource="cart.png">
        <x:Arguments>
            <local:Cart/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage  IconImageSource="user.png">
        <x:Arguments>
            <local:UserInfo/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>